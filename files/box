#!/bin/bash
rst="$(tput sgr0)"
fgred="${rst}$(tput setaf 1)" # Red
fggrn="${rst}$(tput setaf 2)" # Green
fgylw="${rst}$(tput setaf 3)" # Yellow
bld="$(tput bold)"
bfgred="${bld}$(tput setaf 1)"
bfggrn="${bld}$(tput setaf 2)"
bfgylw="${bld}$(tput setaf 3)"

echo ''${bfgylw}' (                       (
 )\ )        )           )\ )              (
(()/(  (  ( /((         (()/(    (   )  (  )\
 /(_))))\ )\())(   ( ___ /(_))  ))\ /(( )\((_|
('${bfgred}'_'${bfgylw}')) /((_|'${bfgred}'_'${bfgylw}'))(()\  )\___('${bfgred}'_'${bfgylw}'))'${bfgred}'_'${bfgylw}'  /((_|_))((_)_ )\'${bfgred}'
| _ \'${bfgylw}'('${bfgred}'_'${bfgylw}'))'${bfgred}'| |_ '${bfgylw}'(('${bfgred}'_'${bfgylw}')(('${bfgred}'_'${bfgylw}')   '${bfgred}'|   \'${bfgylw}'('${bfgred}'_'${bfgylw}')) '${bfgred}'_'${bfgylw}')(('${bfgred}'_|_)'${bfgylw}' (('${bfgred}'_'${bfgylw}')'${bfgred}'
|   / -_)|  _| `_/ _ \   | |) / -_)\ V /| | (_-<
|_|_\___| \__|_| \___/   |___/\___| \_/ |_|_/__/
          .    .
          |\   |\
       _..;|;__;|;
     ,`   `;` \`;`-.
     7;-..     :    )
.--._)|   `;==,|,==`     '${bfggrn}'THE RETRO DEVILS'${bfgred}'
 `\`@; \_ `<`'${bfgylw}'G'${bfgred}'," '${bfgylw}'G'${bfgred}').     '${bfggrn}'--DEVILS BOX----'${bfgred}'
   `\/-;,(  )  .>. )     '${bfggrn}'--VERSION--2.3--'${bfgred}'
       < ,-;`-.__.;`
        `\_ `-,__,`
           `-..,;,>
              `;;;;
               `  `
'${rst}''
sleep 5
